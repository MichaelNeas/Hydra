<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:id="@+id/inputPane">

        <RelativeLayout
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="0.68"
            android:paddingBottom="2dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:elevation="1dp"
                android:id="@+id/controlPanel">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:id="@+id/modeSettings"
                    android:layout_weight="2">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/hydraTitle">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/app_name"
                            android:id="@+id/appTitle"
                            android:layout_gravity="center" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/currentMode">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/current_mode_label"
                            android:id="@+id/currentModeLabel" />

                        <TextView
                            android:id="@+id/currentModeText"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:text="Action"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/modesListView"
                        android:layout_alignParentEnd="false"
                        android:layout_below="@+id/currentModeText" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/hydraPanel"
                    android:layout_weight="3">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btoothControl">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/btoothInfo"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/connectedDeviceName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="[SelectedDev]"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/connectedDeviceAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="MA:CA:DD:RE:SS"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="15sp"
                                android:paddingTop="5dp"/>

                        </LinearLayout>

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/btoothButton"
                            android:src="@drawable/ic_bluetooth"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/settingsControl">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/modeButtons"
                            android:gravity="center">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0px"
                                android:id="@+id/addModeButton"
                                android:layout_weight="1"
                                android:src="@drawable/add_icon" />

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0px"
                                android:id="@+id/resetModeButton"
                                android:layout_weight="1"
                                android:src="@drawable/reset_icon" />

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0px"
                                android:id="@+id/saveModeButton"
                                android:layout_weight="1"
                                android:src="@drawable/save_icon" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="15dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:id="@+id/hydraSettings"
                            android:layout_weight="2">

                            <RelativeLayout
                                android:id="@+id/sendActionWindow"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:background="@drawable/gesture_window_bkrd"
                                android:layout_weight="1.6"
                                android:gravity="center">

                            </RelativeLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:id="@+id/hydraButtons">

                                <ImageButton
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/calButton"
                                    android:layout_gravity="center"
                                    android:src="@drawable/cal_icon"
                                    android:adjustViewBounds="false"
                                    android:layout_weight="1" />

                                <ImageButton
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/breakButton"
                                    android:layout_weight="1"
                                    android:src="@drawable/break_icon" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="0.8">

            <ScrollView
                android:layout_marginTop="-3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/gestureSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/dynCard"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_centerHorizontal="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="20dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/dynTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@string/DYNAMIC_TITLE"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="20sp" />

                            <Switch
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:textOn=""
                                android:textOff=""
                                android:id="@+id/dynSwitch"/>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/speedCard"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_centerHorizontal="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="35dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/speedTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="@string/SPEED_TITLE"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="20sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/SERVO0_LABEL"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/colorSecondaryText"
                                    android:textSize="15sp" />

                                <SeekBar
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/servoSpeedSeekBar0" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="##"
                                    android:id="@+id/servoSpeedIndicator0"
                                    android:textSize="18sp"
                                    android:textColor="#FFFFFF"
                                    android:padding="8dp"
                                    android:background="@drawable/value_indicator"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/SERVO1_LABEL"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/colorSecondaryText"
                                    android:textSize="15sp" />

                                <SeekBar
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/servoSpeedSeekBar1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="##"
                                    android:id="@+id/servoSpeedIndicator1"
                                    android:textSize="18sp"
                                    android:textColor="#FFFFFF"
                                    android:padding="8dp"
                                    android:background="@drawable/value_indicator"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/SERVO2_LABEL"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/colorSecondaryText"
                                    android:textSize="15sp" />

                                <SeekBar
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/servoSpeedSeekBar2"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="##"
                                    android:id="@+id/servoSpeedIndicator2"
                                    android:textSize="18sp"
                                    android:textColor="#FFFFFF"
                                    android:padding="8dp"
                                    android:background="@drawable/value_indicator"/>
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/depthCard"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_centerHorizontal="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="35dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/depthTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="@string/DEPTH_TITLE"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="20sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/SERVO0_LABEL"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/colorSecondaryText"
                                    android:textSize="15sp" />

                                <SeekBar
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/gripDepthSeekBar0" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="##"
                                    android:id="@+id/gripDepthIndicator0"
                                    android:textSize="18sp"
                                    android:textColor="#FFFFFF"
                                    android:padding="8dp"
                                    android:background="@drawable/value_indicator"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/SERVO1_LABEL"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/colorSecondaryText"
                                    android:textSize="15sp" />

                                <SeekBar
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/gripDepthSeekBar1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="##"
                                    android:id="@+id/gripDepthIndicator1"
                                    android:textSize="18sp"
                                    android:textColor="#FFFFFF"
                                    android:padding="8dp"
                                    android:background="@drawable/value_indicator"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/SERVO2_LABEL"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/colorSecondaryText"
                                    android:textSize="15sp" />

                                <SeekBar
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/gripDepthSeekBar2"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="##"
                                    android:id="@+id/gripDepthIndicator2"
                                    android:textSize="18sp"
                                    android:textColor="#FFFFFF"
                                    android:padding="8dp"
                                    android:background="@drawable/value_indicator"/>
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/actThreshCard"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_centerHorizontal="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="35dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/actThreshTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="Threshhold"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="20sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center">

                                <SeekBar
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/actThreshSeekBar" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="##"
                                    android:id="@+id/actThreshIndicator"
                                    android:textSize="18sp"
                                    android:textColor="#FFFFFF"
                                    android:padding="8dp"
                                    android:background="@drawable/value_indicator"/>
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/writeDelCard"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_centerHorizontal="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="35dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/writeDelTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="Write Delay"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="20sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center">

                                <SeekBar
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/writeDelSeekBar" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="##"
                                    android:id="@+id/writeDelIndicator"
                                    android:textSize="18sp"
                                    android:textColor="#FFFFFF"
                                    android:padding="8dp"
                                    android:background="@drawable/value_indicator"/>
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/debugCard"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_centerHorizontal="true">

                        <LinearLayout
                            android:id="@+id/debugSendString"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <EditText
                                android:id="@+id/input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignEnd="@id/currentModeText" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>